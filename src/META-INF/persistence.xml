<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.7" xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
 http://java.sun.com/xml/ns/persistence/persistence_2_7.xsd">
 
  <persistence-unit name="escalafon" transaction-type="RESOURCE_LOCAL">
    <provider>com.objectdb.jpa.Provider</provider>
    <class>(default package).Aspirer</class>
    <class>(default package).Secondary</class>
    <class>(default package).Bachelor</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhostescalafon"/>
      <property name="javax.persistence.jdbc.driver" value="com.ysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="NoGameNoLife1998"/>
      <property name="javax.persistence.schemageneration.database.action" value="create"/>
    </properties>
  </persistence-unit>
 
</persistence>